<h1>Welcome Page</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Body</th>
  </tr>
<% @articles.each do |article| %>
<tr>
<td>
  <%= article.id %>
</td>
<td>
  <%= article.title %>
</td>
<td>
<%= article.body %>
</td>
<td>
  <%= link_to "View", article_path(article), class: 'article_title', id: "article_#{article.id}" %> |  <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Really delete the article?"} %> | 
  <%= link_to "Edit", edit_article_path(article) %>
</td>
</tr>

<% end %>
</table>
<table>
  <tr>
    <td>
      <%= link_to "Create a New Article", new_article_path, class: 'new_article' %>
    </td>
  </tr>
</table>



