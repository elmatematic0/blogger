<h1>Welcome Page</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Body</th>
  </tr>
<% @articles.each do |article| %>
<tr>
<td>
  <%= article.id %>
</td>
<td>
  <%= article.title %>
</td>
<td>
<%= article.body %>
</td>
<td>
  <%= link_to "View", article_path(article), class: 'article_title', id: "article_#{article.id}" %> 
</td>
</tr>

<% end %>
</table>
